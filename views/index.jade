extends layout



block vars
	- var datas = records.datas
	span.flag-lang#fr

block content

	div.intro-overlay
		div.intro-content
			img.logo(src="img/logo.jpg")
			div.flex
				img.intro(src="img/intro.jpg")
				div.cta-container
					img.loading(src="img/chargement.gif")
					img.cta-start(src="img/vamos.jpg")
					img.cta-start-on(src="img/vamos_on.jpg")

	div.slides-container
		img.tuto(src="img/tuto-desktop.gif")
		div.slides-inner

	div.overlay
		img.volume.icon-volume-on(src="img/son-on.jpg")
		img.volume.icon-volume-off(src="img/son-off.jpg")

	audio#sound-0(autoplay loop preload)
		source(src="audio/0.mp3" type="audio/mpeg")
